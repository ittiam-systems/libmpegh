ifneq ($(ARCH), armv7)
INCLUDES += -I$(PATH_PLAT)
endif

INCLUDES += -I$(PATH_DEC) -I$(PATH_TEST)

OBJS_LIBS		= $(SRCS_LIBS:.c=.o)

CFLAGS += $(INCLUDES)

all: $(LIBS)

$(OBJS_LIBS): %.o: %.c
	@echo CC `basename $<`
	@$(CC) $(CFLAGS) $*.c -o $*.o 

	
$(LIBS): $(OBJS_LIBS)
	@echo AR `basename $(LIBS)`
	@$(AR) -r $(LIBS) $(OBJS_LIBS)
	@rm -f $(OBJS_LIBS)

	
clean: src_clean 		
	@echo rm LIBS
	@rm -f $(LIBS)

src_clean:
	@echo rm SRCS
	@rm -f $(OBJS_LIBS)
